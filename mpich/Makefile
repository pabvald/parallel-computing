args = $(args9) 	  # Choosen argument 
nprocs = 4			  # Number of processors


extinguishing_mpi: extinguishing_mpi.c
	mpicc  $(CFLAGS) $< -o $@ $(LIBS)


run: extinguishing_mpi
	mpiexec -n $(nprocs) ./$< $(args)
	rm $<


debug_mpi: extinguishing_mpi.c
	mpicc  $(CFLAGS) -DDEBUG $< -o $@ $(LIBS)
	mpiexec -n $(nprocs) ./$@ $(args)


errorcheck: extinguishing_mpi.c
	mpicc  $(CFLAGS) -DERRORCHECK $< -o $@ $(LIBS)
	mpiexec -n $(nprocs) ./$@ $(args)
	rm $@

clean:
	rm -f extinguishing_mpi debug_mpi 
